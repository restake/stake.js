{
    "include": ["src", "types"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "target": "ESNext",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,

        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "noEmit": false,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}

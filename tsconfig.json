{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,

        "allowImportingTsExtensions": false,
        "emitDeclarationOnly": false,
        "noEmit": false,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
